<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.confirmOrder.confirmOrderActivity">

    <!-- Título de la página -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Pedido"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Mensaje de éxito -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has realizado el pedido con éxito"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Mensaje de felicitación -->
    <TextView
        android:id="@+id/tv_congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Felicidades!"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <!-- Número de pedido -->
    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número de Pedido: #1234556"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Mensaje de preparación -->
    <TextView
        android:id="@+id/tv_preparation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estamos trabajando para preparar tu pedido"
        android:textSize="16sp" />
</LinearLayout>