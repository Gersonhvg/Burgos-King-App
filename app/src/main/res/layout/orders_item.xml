<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF8F4"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de Orden"
                android:textColor="#484444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="#12345566"
                android:textAlignment="viewEnd"
                android:textColor="#010F07"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menuItemsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalToPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL A PAGAR"
                android:textColor="#F8B64C"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalAmountOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="$76"
                android:textAlignment="viewEnd"
                android:textColor="#DE9B2F"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paymentMethodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método de Pago"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Al recoger entrega"
                android:textAlignment="viewEnd"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderAccepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tu orden ha sido aceptada"
            android:textAlignment="center"
            android:textColor="#D0691E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preparingOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estamos trabajando para preparar tu orden"
            android:textAlignment="center"
            android:textColor="#D0691E"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
